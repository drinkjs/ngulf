{
  "name": "ngulf",
  "version": "0.5.6",
  "description": "Based on the Fastify webframework. Integrate typeorm, ioredis, and class-validator",
  "engines": {
    "node": ">=16.0.0"
  },
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "type": "module",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "rollup -c --bundleConfigAsCjs",
    "release": "npm run build && npm publish",
    "check": "npm pack --dry-run",
    "test": "vitest run",
    "coverage": "vitest run --coverage",
    "demo": "nodemon"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/drinkjs/ngulf.git"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/drinkjs/ngulf/issues"
  },
  "homepage": "https://github.com/drinkjs/ngulf#readme",
  "dependencies": {
    "@typegoose/typegoose": "11.4.1",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.0",
    "colors": "^1.4.0",
    "fastify": "^4.22.2",
    "ioredis": "^5.2.4",
    "mongoose": "7.4.0",
    "mysql2": "^3.6.0",
    "nanoid": "^4.0.2",
    "reflect-metadata": "^0.1.13",
    "ts-node": "^10.9.1",
    "typeorm": "^0.3.11",
    "ws": "^7.4.2",
    "zod": "^3.22.2",
    "zod-to-json-schema-es": "^1.0.2"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^11.1.2",
    "@types/busboy": "^0.2.3",
    "@types/ioredis": "^4.26.4",
    "@types/node": "^16.16.0",
    "@types/ws": "^7.4.0",
    "@typescript-eslint/eslint-plugin": "^6.6.0",
    "@typescript-eslint/parser": "^6.6.0",
    "@vitest/coverage-istanbul": "^0.34.1",
    "@vitest/coverage-v8": "^0.34.1",
    "axios": "^1.4.0",
    "eslint": "^8.48.0",
    "husky": "^1.2.0",
    "lint-staged": "^8.1.0",
    "nodemon": "^3.0.1",
    "prettier": "^2.1.2",
    "rimraf": "^3.0.2",
    "rollup": "^3.28.0",
    "rollup-plugin-copy": "^3.5.0",
    "rollup-plugin-delete": "^2.0.0",
    "rollup-plugin-dts": "^6.0.1",
    "tslib": "^2.6.1",
    "typescript": "^5.2.2",
    "vitest": "^0.34.1"
  },
  "nodemonConfig": {
    "ignore": [
      "test/*",
      "docs/*",
      "log/*",
      "data/*",
      "dist/*"
    ],
    "delay": "1500"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{js,ts}": [
      "eslint --fix",
      "git add"
    ]
  }
}
